<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <isExposed>true</isExposed>
    <apiVersion>58.0</apiVersion>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <!-- Data Binding -->
            <property label="Lead Product Data Binding" name="leadProduct" type="String"
                default="{!Product.Details}" />


            <!-- "Add to Cart" Button -->
            <property
                label="Cart Button Text"
                name="cartButtonText"
                type="String"
                translatable="true"
                default="Add To Cart"
            />
            <property
                label="Cart Button Processing Text"
                name="cartButtonProcessingText"
                type="String"
                translatable="true"
                default="Adding..."
            />
            <property label="Cart Button Text Color" name="cartButtonColor" type="Color" />
            <property label="Cart Button Hover Color" name="cartButtonColorHover" type="Color" />
            <property label="Cart Button Background Color" name="cartButtonColorBackground"
                type="Color" />
            <property label="Cart Button Background Hover Color"
                name="cartButtonColorBackgroundHover" type="Color" />
            <property label="Cart Button Border Color" name="cartButtonColorBorder" type="Color" />
            <property
                label="Cart Button Border Radius"
                name="cartButtonRadiusBorder"
                type="Integer"
                min="0"
                max="50"
                default="0"
            />


            <!-- Quantity Selector & Product Quantity Rules -->
            <property
                label="Quantity Selector Label"
                name="quantitySelectorLabel"
                type="String"
                translatable="true"
                default="QTY"
            />
            <property
                label="Minimum Text"
                name="minimumValueGuideText"
                type="String"
                translatable="true"
                default="Minimum quantity is {0}"
            />
            <property
                label="Maximum Text"
                name="maximumValueGuideText"
                type="String"
                translatable="true"
                default="Maximum quantity is {0}"
            />
            <property
                label="Step Size Text"
                name="stepValueGuideText"
                type="String"
                translatable="true"
                default="Increment quantity is {0}"
            />
            <property
                label="Out of Stock Text"
                name="outOfStockText"
                type="String"
                translatable="true"
                default="Out of Stock"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>