<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>BLN_HireCarCategory__c</field>
        <field>BLN_HireCarStartDate__c</field>
        <field>BLN_HireCarEndDate__c</field>
        <field>BLN_Approver__c</field>
        <field>BLN_ApprovalStatus__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>BLN_ServiceAndComplaintsApprovalQueue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approval required Hire Category except B or C</label>
        <name>BLN_AssignCaseToServiceAndComplaintsApprovalQueue</name>
    </approvalStep>
    <description>FOUK-3050
Approval Process for Hire Car Category is other than B or C</description>
    <emailTemplate>unfiled$public/BLN_ApproverEmailForHireCarCategory</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 OR 2 OR 3</booleanFilter>
        <criteriaItems>
            <field>Case.BLN_HireCarCategory__c</field>
            <operation>notEqual</operation>
            <value>B</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.BLN_HireCarCategory__c</field>
            <operation>notEqual</operation>
            <value>C</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.BLN_HireCarCategory__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>BLN_CaseApproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>BLN_CaseRejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>BLN_CaseSubmittedForApproval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Approval for Hire Category except B or C</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>BLN_CaseReset</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
