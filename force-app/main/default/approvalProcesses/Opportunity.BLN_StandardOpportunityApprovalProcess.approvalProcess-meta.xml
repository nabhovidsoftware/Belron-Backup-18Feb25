<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Account</field>
        <field>Owner</field>
        <field>Name</field>
        <field>Type</field>
        <field>BLN_BusinessPriorities__c</field>
        <field>BLN_ClientPriorities__c</field>
        <field>BLN_PotentialValue__c</field>
        <field>BLN_PotentialVolume__c</field>
        <field>BLN_PriceproposalStartPoint_AUP__c</field>
        <field>BLN_PriceproposalStartPointAve_BM__c</field>
        <field>BLN_PriceproposalStartPointAveBMPercent__c</field>
        <field>BLN_PriceproposalWalkAwayPointAUP__c</field>
        <field>BLN_PriceproposalWalkawayPointAveBMPound__c</field>
        <field>BLN_PriceproposalWalkawaypointAveBM__c</field>
        <field>BLN_PriceProposalStartPointADASPrice__c</field>
        <field>BLN_PriceProposalWalkawayPointADAS__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>BLN_CMApprover__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Commercial Manager Approval</label>
        <name>BLN_CommercialManagerApproval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>BLN_LMApprover__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Line Manager Approval</label>
        <name>BLN_LineManagerApproval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>FOUK-3724</description>
    <emailTemplate>BLN_Opportunity/BLN_StandardOpportunityApproval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Internal Approvals</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>Standard Opportunity</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>BLN_OpportunityApprovalAccepted</name>
            <type>Alert</type>
        </action>
        <action>
            <name>UpdateStageNext</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>BLN_OpportunityApprovalRejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>UpdateStagePrevious</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Standard Opportunity Approval Process</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>UpdateStagePrevious</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
