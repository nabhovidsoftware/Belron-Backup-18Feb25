<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>BLN_Contract__c</field>
        <field>Name</field>
        <field>RecordType</field>
        <field>BLN_SLAType__c</field>
        <field>BLN_ThresholdValue__c</field>
        <field>BLN_BonusThreshold__c</field>
        <field>BLN_PenaltyThreshold__c</field>
        <field>Owner</field>
        <field>BLN_Account__c</field>
        <field>BLN_ActiveFrom__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>SLA Line Manager Approval</label>
        <name>BLN_SLALineManagerApproval</name>
    </approvalStep>
    <description>Approval process for new SLAs not in line with the business Standard SLA</description>
    <emailTemplate>BLN_AccountRuleParameter/BLN_SLAApprovalSubmission</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>BLN_AccountRuleParameter__c.RecordType</field>
            <operation>equals</operation>
            <value>SLA</value>
        </criteriaItems>
        <criteriaItems>
            <field>BLN_AccountRuleParameter__c.BLN_SLAApproved__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>BLN_ApproveSLA</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SLAApproved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>SLAReject</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>SLA Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
