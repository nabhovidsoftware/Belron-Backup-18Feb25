<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Account</field>
        <field>ContractNumber</field>
        <field>Owner</field>
        <field>BLN_PricingInstructionFileName__c</field>
        <field>BLN_PricingInstructionLink__c</field>
        <field>BLN_PricingInstructionFileVersion__c</field>
        <field>BLN_PricingManager__c</field>
        <field>BLN_ApprovedByLineManager__c</field>
        <field>BLN_ReceivedByPricingTeam__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>BLN_LineManagerApporvalEmail</name>
                <type>Alert</type>
            </action>
            <action>
                <name>BLN_UpdateFieldApprovedByLineManager</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>BLN_UpdateFieldReceivedByPricingTeam</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>BLN_LineManger__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Line Manager Approval</label>
        <name>BLN_LineManagerApproval</name>
        <rejectionActions>
            <action>
                <name>BLN_LineManagerRejectsPricingApprovalRequest</name>
                <type>Alert</type>
            </action>
            <action>
                <name>BLN_UpdateApprovedByLineManagerFieldToNo</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>BLN_PricingTeamAcceptPricingApprovalRequestEmail</name>
                <type>Alert</type>
            </action>
            <action>
                <name>BLN_UpdateFieldReceivedByPricingTeamYes</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>BLN_PricingManager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Contract.BLN_ApprovedByLineManager__c</field>
                <operation>equals</operation>
                <value>Yes</value>
            </criteriaItems>
        </entryCriteria>
        <label>Pricing Team Approval</label>
        <name>BLN_PricingTeamApproval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>BLN_PricingTeamRejectsPricingApprovalRequestEmail</name>
                <type>Alert</type>
            </action>
            <action>
                <name>BLN_UpdateFieldReceivedByPricingTeamNo</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>FOUK-4701
SALES PRICING - Request APPROVAL of pricing instruction generated - Sales Person&apos;s</description>
    <emailTemplate>BLN_Contract/BLN_PricingApprovalSubmissision</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>BLN_FieldApprovedByLineManagerInProgess</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Pricing Approval Process</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
